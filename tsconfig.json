{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["es5", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
